include ../mixins/title.pug

+title(env, "Nutzerprofil")
.row.mb-4
    .avatar
        img.avatar.rank(
            src=`/resource/${f.profile.avatar}`
            class=[`rank${f.profile.permission_level}`]
        )
    .col
        span(style="font-size: 26pt;")
            strong #{f.profile.username}
        br
        span.sec-text
            strong #{f.profile.id}
        br
        span.sec-text beigetreten am #{new Date(f.profile.creation_time).toLocaleDateString("de")}
        br
        br
        button.btn.btn-info(
            type="button",
            data-bs-toggle="tooltip",
            data-bs-placement="top",
            title="DMail verfassen",
            onclick!=`goto('/dmail?ref=${f.profile.id}')`
        )
            strong ðŸ’¬ DMail
.row.mb-3.gx-3(style="min-height: 250px;")
    .col-12.col-md-8.col-lg-6
        .text-field.h-100
            h4 Beschreibung
            | #{f.profile.bio}
.row.mb-3.gx-3(style="min-height: 250px;")
    .col-6.col-md-4.col-lg-3
        .text-field.h-100
            h4 Gruppen
            | #{f.profile.classes}
    .col-6.col-md-4.col-lg-3
        .text-field.h-100
            h4 Links
            | #{f.profile.links}
